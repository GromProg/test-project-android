<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="ru.whitetigersoft.test_application.LoginGroup.LoginActivity">


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="16dp"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:lineSpacingExtra="8sp"
                    android:textColorHint="#6e6e6e"
                    android:textSize="16sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/edit_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_help_password_black_24_px"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingBottom="16dp"
                    android:lineSpacingExtra="8sp"
                    android:textColorHint="#6e6e6e"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </LinearLayout>

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_enter"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.04"
                android:text="@string/button_enter"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="@string/button_enter" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>